apt update
apt upgrade

NGINX :

apt -y install nginx
service nginx start
-> COPY srcs/wordpress.conf /home/
mv home/wordpress.conf /etc/nginx/sites-available/
ln -s /etc/nginx/sites-available/wordpress.conf  /etc/nginx/sites-enabled/
service nginx reload


MariaDB :

apt -y install mariadb-server
service mysql start
mysql -u root
echo create database wordpress;
echo create user 'wp_user'@'localhost' identified by 'secure_password';
echo grant all on wordpress.* to 'wp_user'@'localhost';
echo flush privileges;
echo exit


PHP 7 :

apt -y install php-fpm php-common php-mbstring php-xmlrpc php-soap php-gd php-xml php-intl php-mysql php-cli php-ldap php-zip php-curl
service php7.3-fpm start


Wordpress :

apt -y install wget
cd /tmp
###### (already dl)> wget http://wordpress.org/latest.tar.gz
tar -xvzf wordpress-5.3.1.tar.gz -C /var/www/html

PHPMYADMIN :

cd
###### (already dl)> wget https://files.phpmyadmin.net/phpMyAdmin/4.9.0.1/phpMyAdmin-4.9.0.1-english.tar.gz
mkdir /var/www/html/wordpress/phpmyadmin
tar xzf phpMyAdmin-4.9.0.1-english.tar.gz --strip-components=1 -C /var/www/html/wordpress/phpmyadmin
cp config-sample.inc.php config.inc.php

chown -R www-data:www-data /var/www/*
chmod -R 755 /var/www/*

service mysql restart
/etc/init.d/php7.3-fpm start
service nginx restart


